NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# OpenAI API Configuration (Optional)
# Get your API key from: https://platform.openai.com/api-keys
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_NODE_ENV=development

# Azure SQL Database Configuration (Optional)
# Only required if you want to use database features
DB_SERVER=your_database_server.database.windows.net
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_PORT=1433
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false
DB_CONNECTION_TIMEOUT=30000

# Google Cloud Vision API (Optional)
# Only required if you want to use image analysis features
GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_api_key_here

# Additional Configuration
LOG_LEVEL=info
MAX_REQUEST_SIZE=10mb
CORS_ORIGINS=http://localhost:3000,http://localhost:3001