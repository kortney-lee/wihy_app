# Environment configuration for local development
# Copy this file to .env.local and update the values

# Development Flags - Set to 'true' to use local development servers
# By default, all API calls go to production (ml.wihy.ai, services.wihy.ai, and ML API)
REACT_APP_USE_LOCAL_API=true
REACT_APP_USE_LOCAL_NEWS=true
REACT_APP_USE_LOCAL_ML=true

# Main WiHy API - only used when REACT_APP_USE_LOCAL_API=true
# For mobile testing, replace localhost with your development machine's IP
# Find your IP with: ipconfig (Windows) or ifconfig (Mac/Linux)
# Example: REACT_APP_WIHY_API_URL=http://192.168.1.100:8000
REACT_APP_WIHY_API_URL=http://localhost:8000

# News Service API - only used when REACT_APP_USE_LOCAL_NEWS=true
# Flexible port for local development (5001, 5002, 5003, etc.)
REACT_APP_NEWS_PORT=5001
# Or set the full URL directly:
# REACT_APP_NEWS_API_URL=http://localhost:5001

# ML Service API - only used when REACT_APP_USE_LOCAL_ML=true
# Local ML service for vision analysis and food scanning
REACT_APP_WIHY_ML_API_URL=http://localhost:8001

# Other environment variables
REACT_APP_ENVIRONMENT=development